{
  "name": "Codespace Environment",
  "forwardPorts": [8080, 3000],
  "portsAttributes": {
    "8080": {
      "label": "Web Server",
      "visibility": "public"
    },
    "3000": {
      "label": "App Server",
      "visibility": "private"
    }
  },
  "postAttachCommand": "gh codespace ports visibility 8080:public --codespace \"$CODESPACE_NAME\""
}